  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI dev",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--port=8000",
        "--log-config=logger.yml",
        "--reload",
        "--reload-include",
        "*.env"
      ],
      "envFile": "${workspaceFolder}/envs/local.dev.env",
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Update schemas",
      "type": "python",
      "request": "launch",
      "program": "./scripts/update_schemas.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/envs/local.dev.env"
    }
  ]
}
